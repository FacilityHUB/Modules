function LightingController.setSkybox(skyboxName)
    local preset = LightingController.SkyboxPresets[skyboxName]
    if not preset then return end

    local sky = Lighting:FindFirstChildOfClass("Sky")
    if not sky then
        sky = Instance.new("Sky")
        sky.Parent = Lighting
    end

    for property, value in pairs(preset) do
        sky[property] = value
    end
end

function LightingController.setMaterial(materialName)
    local materialEnum = Enum.Material[materialName]
    if materialEnum then
        for _, object in pairs(workspace:GetDescendants()) do
            if object:IsA("BasePart") then
                object.Material = materialEnum
            end
        end
    else
        warn("Matériau invalide : " .. materialName)
    end
end

local rainbowActive = false
local rainbowCoroutine
local rainbowSpeed = 0.1  -- La vitesse par défaut pour l'effet rainbow (plus faible = plus rapide)

-- Fonction pour activer ou désactiver le rainbow
function LightingController.toggleRainbow(enabled)
    rainbowActive = enabled
    if rainbowActive then
        if not rainbowCoroutine then
            rainbowCoroutine = coroutine.create(function()
                while rainbowActive do
                    -- Change les couleurs des parties à travers un arc-en-ciel
                    local hue = tick() % 5 / 5  -- Modifie la valeur de l'hue pour créer un effet arc-en-ciel
                    local color = Color3.fromHSV(hue, 1, 1)  -- Génère une couleur arc-en-ciel (HSB)
                    LightingController.setPartColor(color)
                    wait(rainbowSpeed)  -- Utilise la vitesse configurée par le slider
                end
            end)
            coroutine.resume(rainbowCoroutine)
        end
    else
        if rainbowCoroutine then
            rainbowActive = false
            coroutine.close(rainbowCoroutine)  -- Arrête la coroutine pour arrêter le rainbow
            rainbowCoroutine = nil
            LightingController.setPartColor(Color3.fromRGB(255, 255, 255))  -- Remet les parties en blanc ou couleur par défaut
        end
    end
end

function LightingController.setPartColor(color)
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") then
            part.Color = color
        end
    end
end

return LightingController
